<%= form_with model: post do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :category %>
    <%= f.select :category, Post.categories_i18n.invert, {}, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :area %>
    <%= f.select :area, Post.areas_i18n.invert, {}, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :location %>
    <%= f.text_area :location, class: "form-control", rows: "3" %>
  </div>
  <div class="mb-3">
    <%= f.label :access %>
    <%= f.text_area :access, class: "form-control", rows: "3" %>
  </div>
  <div class="mb-3">
    <%= f.label :url %>
    <%= f.text_area :url, class: "form-control", rows: "3" %>
  </div>
  <div class="mb-3">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", rows: "5" %>
  </div>
  <div class="mb-3">
    <%= f.label :post_image %>
    <%= f.file_field :post_image, class: "form-control", accept: 'image/*' %>
    <%= f.hidden_field :post_image_cache %>
  </div>
  <%= f.submit nil, class: "btn btn-primary" %>
<% end %>
