<div class="col-sm-12 col-lg-4 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="card">
        <%= image_tag(post.post_image.url, class: "card-img-top", width: "300", height: "200") %>
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-title">
            <%= link_to post.title, post_path(post) %>
          </h4>
        </div>
        <ul class="list-inline">
          <li><i class="bi bi-person"></i><%= post.user.name %>(<%= I18n.t("enums.user.gender.#{post.user.gender}") %><%= I18n.t("enums.user.age.#{post.user.age}") %>)</li>
          <li><%= "カテゴリ: #{I18n.t("enums.post.category.#{post.category}")}" %></li>
          <li><%= "エリア: #{I18n.t("enums.post.area.#{post.area}")}" %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
