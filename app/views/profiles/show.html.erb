<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:name) %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:profile_image) %></th>
          <td><%= image_tag current_user.profile_image_url, class: 'rounded-circle', size: '50x50' %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:age) %></th>
          <td><%= current_user.age %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:gender) %></th>
          <td><%= current_user.gender %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:comment) %></th>
          <td><%= current_user.comment %></td>
        </tr>
      </table>
    </div>
  </div>
</div>